---
import HTML from "../components/icons/HTML.astro";
import Css from "./icons/Css.astro";
import React from "../components/icons/React.astro";
import Tailwind from "../components/icons/Tailwind.astro";
import JavaScript from "./icons/JavaScript.astro";
import Boostrap from "./icons/Boostrap.astro";
import SocialPill from "../components/SocialPill.astro";
import Repo from "../components/icons/Repo.astro";
import Link from "../components/icons/Link.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: HTML,
  },

  Css: {
    name: "CSS",
    class: "bg-black text-white",
    icon: Css,
  },

  React: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },

  Tailwind: {
    name: "Tailwind",
    class: "bg-black text-white",
    icon: Tailwind,
  },

  Javascript: {
    name: "JS",
    class: "bg-black text-white",
    icon: JavaScript,
  },
  Boostrap: {
    name: "Boostrap",
    class: "bg-black text-white",
    icon: Boostrap,
  },
};

const PROJECTS = [
  {
    title: "Emastore - Tienda online de componentes electronicos",
    description:
      "Encuentra en nuestra tienda de computadoras los mejores equipos de escritorio, portátiles, tarjeta de video y monitores al mejor precio. Ofrecemos una amplia variedad de marcas y modelos para que puedas elegir el que más se adapte a tus necesidades. ¡Compra ahora y lleva tu experiencia tecnológica al siguiente nivel!",
    link: "https://emastore.netlify.app/",
    github: "https://github.com/HenryAcevedo16/Emastore",
    image: "/public/projects/120shots_so.webp",
    tags: [TAGS.HTML, TAGS.Css, TAGS.Javascript, TAGS.Boostrap],
  },

  {
    title: "GojoStore - Tienda online de Anime",
    description:
      "Encuentra en nuestra tienda de anime, GojoStore, los mejores productos relacionados con tus series y personajes favoritos. Ofrecemos una amplia variedad de artículos, desde figuras coleccionables hasta ropa y accesorios. Contamos con una amplia gama de series y personajes para que puedas elegir los que más se adapten a tus gustos. ¡Compra ahora y lleva tu pasión por el anime al siguiente nivel!",
    link: "https://gojostore.netlify.app/",
    github: "https://github.com/HenryAcevedo16/GojoStoree",
    image: "/public/projects/982shots_so.webp",
    tags: [TAGS.HTML, TAGS.Css, TAGS.Javascript, TAGS.React],
  },

  {
    title:
      "Citas Con React - Aplicacion para  gestionar citas medicas de mascotas.",
    description:
      "Citas con React es una aplicación que desarrollé para gestionar citas médicas en clínicas veterinarias. Los usuarios pueden programar, actualizar y cancelar citas para sus mascotas, y los veterinarios pueden revisar su agenda y prepararse para las citas del día. Ofrecemos una interfaz fácil de usar y funcionalidades que facilitan la gestión de citas. ¡Prueba ahora VetApp y lleva la gestión de tu clínica veterinaria al siguiente nivel!",
    link: "https://vetcitasapp.netlify.app/",
    github: "https://github.com/HenryAcevedo16/CitasConReact",
    image: "/public/projects/207shots_so.jpg",
    tags: [TAGS.HTML, TAGS.Tailwind, TAGS.Javascript, TAGS.React],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, github, link }) => (
    <article class="py-9">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty py-3">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tags) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tags.class} py-1 px-2`}
            >
              <tags.icon class="size-4" />
              {tags.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10 mb-4"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div class="flex gap-x-4">
        <SocialPill href={`${github}`}>
          <Repo class="size-4 md:size-6" />
          Github
        </SocialPill>

        <SocialPill href={`${link}`}>
          <Link class="size-4 md:size-6" />
          Ver Pagina Web
        </SocialPill>
      </div>
    </article>
  ))
}
